<h1>Editing book</h1>
 
<%= form_for :book, url: book_path(@book), method: :patch do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
  
  <p>
    <%= f.label :page %><br>
    <%= f.text_field :page %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', books_path %>