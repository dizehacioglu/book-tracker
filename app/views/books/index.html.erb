<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Page</th>
    <th>Description</th>
    <th colspan="2"></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.page %></td>
      <td><%= book.description %></td>
      <td><%= link_to 'Show Book', book_path(book) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add New Book", new_book_path %>